@model List<Selecao.Domain.Entities.Candidato>
<table class="table" id="tbCandidatos">
    <thead class="text-center thead-sticky">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Usuário Inclusão</th>
            <th>Data Inclusão</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidato in Model.OrderByDescending(c => c.Id))
        {
            var disponivel = candidato.Selecionado == true ? "Selecionado" : "Disponivel";
            disponivel = candidato.Banido == true ? "Excluído" : disponivel;
            var corLinha = candidato.Banido == true ? "bg-excluido" : "";

            <tr class="@corLinha">
                <td class="@corLinha">@candidato.Id.ToString("D11")</td>
                <td class="@corLinha">@candidato.Nome</td>
                <td class="@corLinha">@candidato.UsuarioInclusao</td>
                <td class="@corLinha">@candidato.DataInclusao</td>
                <td class="text-center @corLinha">@disponivel</td>
                <td class="text-center @corLinha">
                    <div class="form-button-action">
                        <i class="fas fa-newspaper text-sencondary mt-1 c-pointer" title="Curriculo" onclick="verCurriculo('@candidato.Id')"></i>
                        <a class="ms-4" asp-action="Visualizar" asp-route-id="@candidato.Id"><i class="fa fa-eye text-secondary c-pointer"></i></a>
                        <a class="ms-4" asp-action="Editar" asp-route-id="@candidato.Id"><i class="fa fa-edit text-primary c-pointer"></i></a>
                        @if (candidato.Banido)
                        {
                            <i class="fas fa-retweet text-light ms-4 c-pointer mt-1" title="Reativar" onclick="alterarStatus('@candidato.Id','@candidato.Nome','Reativar')"></i>
                        }
                        else
                        {
                            <i class="fa fa-times text-danger ms-4 c-pointer mt-1" title="Excluir" onclick="alterarStatus('@candidato.Id','@candidato.Nome','Excluir')"></i>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal" id="modalCurriculo" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content" id="dadoCurriculo">
        </div>
    </div>
</div>