@using Selecao.Domain.Entities
@model Selecao.MVC.Models.CandidatoViewModel;

@{
    ViewData["Title"] = "Incluir Candidato";
}

<div class="d-flex justify-content-between">
    <div class="page-header">
        <h3 class="fw-bold mb-3">Candidatos</h3>
        <ul class="breadcrumbs">
            <li class="nav-home active">
                <a asp-controller="Home" asp-action="Index">
                    <p>
                        <i class="fas fa-home"></i>
                    </p>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a asp-controller="Candidatos" asp-action="Index">
                    <p>Candidatos</p>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <p href="#">Editar</p>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <p>@Model.Nome</p>
            </li>
        </ul>
    </div>
    <div>
        <button class="btn btn-stantard" onclick="gravarEdicao()">
            <span class="btn-label">
                <i class="fa fa-check me-1"></i>
            </span>
            Gravar
        </button>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <ul class="nav nav-tabs nav-line nav-color-secondary" id="line-tab" role="tablist">
            <li class="nav-item"><a class="nav-link active" id="line-home-tab" data-bs-toggle="pill" href="#line-home" role="tab" aria-controls="pills-home" aria-selected="true">Geral</a></li>
            <li class="nav-item"><a class="nav-link" id="line-contact-tab" data-bs-toggle="pill" href="#line-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Contatos</a></li>
            <li class="nav-item"><a class="nav-link" id="line-formacao-tab" data-bs-toggle="pill" href="#line-formacao" role="tab" aria-controls="pills-formacao" aria-selected="false">Formação</a></li>
            <li class="nav-item"><a class="nav-link" id="line-cursos-tab" data-bs-toggle="pill" href="#line-cursos" role="tab" aria-controls="pills-cursos" aria-selected="false">Cursos</a></li>
            <li class="nav-item"><a class="nav-link" id="line-experiencia-tab" data-bs-toggle="pill" href="#line-experiencia" role="tab" aria-controls="pills-experiencia" aria-selected="false">Experiência</a></li>
        </ul>
        <div class="tab-content mt-3 mb-3 overflow-y-auto" id="line-tabContent" style="max-height: 62vh">
            <div class="tab-pane fade show active" id="line-home" role="tabpanel" aria-labelledby="line-home-tab">
                <form id="formEditar">
                    <div style="width: 98%;">
                        <div class="row">
                            <div class="col-8">
                                <div class="form-group form-group-default">
                                    <label>Nome</label>
                                    <input type="hidden" asp-for="Id" />
                                    <input asp-for="Nome" id="nome" type="text" class="form-control" required />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group form-group-default">
                                    <label>Estado Civil</label>
                                    <select class="form-select" asp-for="EstadoCivil" id="estadoCivil">
                                        <option></option>
                                        @foreach (var estado in Candidato.GetEstadoCivil())
                                        {
                                            <option value="@estado">@estado</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group form-group-default">
                                    <label>Data de Nascimento</label>
                                    <input type="date" asp-for="DataNascimento" id="dataNascimento" class="form-control" lang="en-US" />
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-8">
                                <div class="form-group form-group-default">
                                    <label>Logradouro</label>
                                    <input asp-for="Logradouro" id="logradouro" type="text" class="form-control" />
                                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group form-group-default">
                                    <label>Bairro</label>
                                    <input asp-for="Bairro" id="bairro" type="text" class="form-control" />
                                    <span asp-validation-for="Bairro" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="line-contact" role="tabpanel" aria-labelledby="line-contact-tab">
                <div style="width: 98%;">
                    <div class="form-group w-75" id="contatotable">
                        <partial name="_Contatos" model="Model.Contatos" />
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="line-formacao" role="tabpanel" aria-labelledby="line-formacao-tab">
                <div class="form-group" id="formacaoTable">
                    <partial name="_Formacao" model="Model.Formacao" />
                </div>
            </div>
            <div class="tab-pane fade" id="line-cursos" role="tabpanel" aria-labelledby="line-cursos-tab">
                <div class="form-group" id="cursoTable">
                    <partial name="_Cursos" model="Model.Cursos" />
                </div>
            </div>
            <div class="tab-pane fade" id="line-experiencia" role="tabpanel" aria-labelledby="line-experiencia-tab">
                <div class="form-group" id="experienciaTable">
                    <partial name="_Experiencias" model="Model.Experiencias" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Candidatos/Incluir.js"></script>
}