@model SGHSSVidaPlus.MVC.Models.ProfissionalSaudeViewModel
@{
    ViewData["Title"] = "Incluir Profissional de Saúde";
}

<div class="d-flex justify-content-between">
    <div class="page-header">
        <h3 class="fw-bold mb-3">Profissionais de Saúde</h3>
        <ul class="breadcrumbs">
            <li class="nav-home active">
                <a asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a asp-controller="ProfissionalSaude" asp-action="Index">
                    Profissionais de Saúde
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <p>Incluir</p>
            </li>
        </ul>
    </div>
    <div>
        <button class="btn btn-stantard" onclick="gravarInclusao()">
            <span class="btn-label">
                <i class="fa fa-check me-1"></i>
            </span>
            Gravar
        </button>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <ul class="nav nav-tabs nav-line nav-color-secondary" id="line-tab" role="tablist">
            <li class="nav-item"><a class="nav-link active" id="line-home-tab" data-bs-toggle="pill" href="#line-home" role="tab" aria-controls="pills-home" aria-selected="true">Geral</a></li>
            <li class="nav-item"><a class="nav-link" id="line-formacao-tab" data-bs-toggle="pill" href="#line-formacao" role="tab" aria-controls="pills-formacao" aria-selected="false">Formação</a></li>
            <li class="nav-item"><a class="nav-link" id="line-cursos-tab" data-bs-toggle="pill" href="#line-cursos" role="tab" aria-controls="pills-cursos" aria-selected="false">Cursos</a></li>
        </ul>
        <div class="tab-content mt-3 mb-3 overflow-y-auto" id="line-tabContent" style="max-height: 62vh">
            <div class="tab-pane fade show active" id="line-home" role="tabpanel" aria-labelledby="line-home-tab">
                <form id="formIncluir">
                    <div style="width: 98%;">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group form-group-default">
                                    <label>Nome</label>
                                    <input asp-for="Nome" id="nome" type="text" class="form-control" required />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group form-group-default">
                                    <label>Cargo</label>
                                    <input asp-for="Cargo" id="cargo" type="text" class="form-control" required />
                                    <span asp-validation-for="Cargo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group form-group-default">
                                    <label>Telefone</label>
                                    <input asp-for="Telefone" id="telefone" type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group form-group-default">
                                    <label>Email</label>
                                    <input asp-for="Email" id="email" type="email" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group form-group-default">
                                    <label>Registro no Conselho</label>
                                    <input asp-for="RegistroConselho" id="registroConselho" type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="line-formacao" role="tabpanel" aria-labelledby="line-formacao-tab">
                <div class="form-group" id="formacaoTable">
                    <partial name="_FormacaoAcademica" model="Model.Formacao" />
                </div>
            </div>
            <div class="tab-pane fade" id="line-cursos" role="tabpanel" aria-labelledby="line-cursos-tab">
                <div class="form-group" id="cursoTable">
                    <partial name="_CursosCertificacoes" model="Model.Cursos" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ProfissionalSaude/Incluir.js"></script>
}

@* MODAL PARA INCLUIR NOVA FORMAÇÃO ACADÊMICA *@
<div class="modal" id="modalNovaFormacaoAcademica" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="dadoNovaFormacaoAcademica">
            <div class="modal-header">
                <h5 class="modal-title">Adicionar Nova Formação Acadêmica</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="salvarNovaFormacaoAcademica()">Salvar</button>
            </div>
        </div>
    </div>
</div>

@* MODAL PARA INCLUIR NOVO CURSO/CERTIFICAÇÃO *@
<div class="modal" id="modalNovoCursoCertificacao" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="dadoNovoCursoCertificacao">
            <div class="modal-header">
                <h5 class="modal-title">Adicionar Novo Curso/Certificação</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="salvarNovoCursoCertificacao()">Salvar</button>
            </div>
        </div>
    </div>
</div>