@model SGHSSVidaPlus.MVC.Models.AgendamentoViewModel
@{
    ViewData["Title"] = "Visualizar Agendamento";
}

<div class="d-flex justify-content-between">
    <div class="page-header">
        <h3 class="fw-bold mb-3">Agendamentos</h3>
        <ul class="breadcrumbs">
            <li class="nav-home active">
                <a asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a asp-controller="Agendamentos" asp-action="Index">
                    Agendamentos
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <p>Visualizar</p>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <p>@Model.Descricao</p>
            </li>
        </ul>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-stantard">
            <span class="btn-label">
                <i class="fas fa-arrow-left me-1"></i>
            </span>
            Voltar
        </a>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div style="width: 98%;">
            <div class="row">
                <div class="col-8">
                    <div class="border rounded d-flex flex-column p-2">
                        <label class="text-statement">Descrição do Agendamento</label>
                        <label class="text-value">@Model.Descricao</label>
                    </div>
                </div>
                <div class="col-4">
                    <div class="border rounded d-flex flex-column p-2">
                        <label class="text-statement">Data e Hora</label>
                        <label class="text-value">@Model.DataHoraAgendamento.ToString("dd/MM/yyyy HH:mm")</label>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <div class="border rounded d-flex flex-column p-2">
                        <label class="text-statement">Profissional Responsável</label>
                        @* MODIFICADO AQUI: Usando a propriedade ProfissionalResponsavelNome *@
                        <label class="text-value">@(Model.ProfissionalResponsavelNome ?? "N/A")</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="border rounded d-flex flex-column p-2">
                        <label class="text-statement">Local de Atendimento</label>
                        <label class="text-value">@Model.Local</label>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <div class="border rounded d-flex flex-column p-2">
                        <label class="text-statement">Observações</label>
                        <label class="text-value">@Model.Observacoes</label>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <div class="border rounded d-flex flex-column p-2">
                        <label class="text-statement">Status</label>
                        <label class="text-value">@(Model.Encerrado ? "Encerrado" : Model.Status)</label> @* Usando Model.Status *@
                    </div>
                </div>
                <div class="col-4">
                    <div class="border rounded d-flex flex-column p-2">
                        <label class="text-statement">Usuário Inclusão</label>
                        <label class="text-value">@Model.UsuarioInclusao</label>
                    </div>
                </div>
                <div class="col-4">
                    <div class="border rounded d-flex flex-column p-2">
                        <label class="text-statement">Data Inclusão</label>
                        <label class="text-value">@Model.DataInclusao.ToString("dd/MM/yyyy HH:mm")</label>
                    </div>
                </div>
            </div>
            @if (Model.Encerrado)
            {
                <div class="row mt-3">
                    <div class="col-6">
                        <div class="border rounded d-flex flex-column p-2">
                            <label class="text-statement">Usuário Encerramento</label>
                            <label class="text-value">@Model.UsuarioEncerramento</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded d-flex flex-column p-2">
                            <label class="text-statement">Data Encerramento</label>
                            <label class="text-value">@Model.DataEncerramento?.ToString("dd/MM/yyyy HH:mm")</label>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>